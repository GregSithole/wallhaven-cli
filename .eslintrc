{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["@typescript-eslint"],
	"extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended", "plugin:prettier/recommended"],
	"rules": {
		"indent": ["error", "tab"],
		"prettier/prettier": [2, { "useTabs": true }]
	},
	"env": {
		"browser": true,
		"es2021": true
	}
}
